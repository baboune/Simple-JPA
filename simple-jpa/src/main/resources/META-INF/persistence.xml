    <!-- OpenJPA -->
    <persistence-unit name="BM" transaction-type="JTA">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <jta-data-source>jdbc/bm</jta-data-source>
        <class>persist.BigCompany</class>
        <class>persist.SmallEmployee</class>
        <properties>
            <property name="openjpa.Log" value="SQL=ERROR"/>
            <property name="openjpa.jdbc.SynchronizeMappings"
                      value="buildSchema(SchemaAction='drop,add')"/>
            <property name="openjpa.jdbc.DBDictionary" value="mysql(DriverVendor=mysql)"/>
            <property name="openjpa.QueryCache" value="CacheSize=2000"/>            
            <property name="openjpa.IgnoreChanges" value="true"/>
            <property name="openjpa.FetchBatchSize" value="20"/>
            <property name="openjpa.FlushBeforeQueries" value="true"/>
        </properties>
    </persistence-unit>

